{{> head }}
    {{> navbar }}


    <div class="box-register">
        <div class="box-datos-register">
            <form method="POST" class="form-register">
                <h3>Login</h3>
                <span class="error-register"></span>
                <div class="datos-form">
                    <input type="email" class="email" name="email" id="email" placeholder="example@artesanias.com" required>
                    <input type="password" class="pass" name="password" id="password" placeholder="**********" required>
                </div>
                <div class="register-options">
                    <button class="button" onclick="login()">Registrar</button>
                    <a class="button" href="/register">¿Ya tienes Cuenta?, Inicia Sesión</a>
                </div>
            </form>
        </div>
    </div>


{{> footer }}